@model IEnumerable<ReleaseManager.Models.Environment>

@{
    ViewBag.Title = "Release Manager - Environments";
}

<h2>Environments</h2>
<table>
    <thead>
        <tr>

            <th>Environment</th>
            <th>Build</th>
            <th>Last Build</th>
            <th>Release Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var environment in Model)
            {
            <tr>
                <td class="environment">@environment.Name</td>
                <td class="environment">@environment.CurrentBuild</td>
                <td class="environment">
                    @(string.IsNullOrWhiteSpace(environment.PreviousBuild) ? "None" : environment.PreviousBuild)
                </td>
                <td class="environment">@environment.LastReleaseDate</td>
                <td class="environment">@Html.ActionLink("Release Notes",
                                                            "Index",
                                                            "Release",
                                                            new{ 
                                                                CurrentRelease = environment.CurrentBuild, 
                                                                PreviousRelease = environment.PreviousBuild 
                                                            }, 
                                                            null)</td>
            </tr>
            }
        }
    </tbody>
    <tfoot>
        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
    </tfoot>
</table>
